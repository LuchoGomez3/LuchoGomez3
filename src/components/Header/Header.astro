---
import Menu from "./Menu.astro";
---

<header
  class="fixed top-0 left-0 w-full dark:bg-[#05192a] dark:text-white bg-white text-black shadow-md z-50"
>
  <div class="flex justify-between items-center px-4 sm:px-8 py-3 h-16">
    <div class="flex items-center gap-x-2 md:text-lg text-sm font-bold">
      <img
        class="md:hidden rounded-full w-[25px] h-[25px] object-cover"
        src="/Perfil.jpeg"
        alt="Foto de perfil de Luciano Gomez"
      />
      Luciano Gomez
    </div>

    <nav class="hidden md:flex items-center gap-x-8 text-sm sm:text-base">
      <a
        href="#top"
        class="hover:text-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 p-2 rounded-full"
        >Home</a
      >
      <a
        href="#experience"
        class="hover:text-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 p-2 rounded-full"
        >Experience</a
      >
      <a
        href="#projects"
        class="hover:text-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 p-2 rounded-full"
        >Projects</a
      >
      <a
        href="#skills"
        class="hover:text-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 p-2 rounded-full"
        >Skills</a
      >

      <!-- Theme Toggle Button -->
      <button
        id="theme-toggle"
        class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
        aria-label="Toggle dark mode"
        onclick="toggleTheme()"
      >
        <svg
          id="theme-toggle-dark-icon"
          class="w-5 h-5 hidden"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
          ></path>
        </svg>
        <svg
          id="theme-toggle-light-icon"
          class="w-5 h-5 hidden"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            fill-rule="evenodd"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </nav>

    <Menu />

    <script is:inline>
      // Initialize theme toggle icons based on current theme
      function updateThemeIcons() {
        const isDark = document.documentElement.classList.contains("dark");
        document
          .getElementById("theme-toggle-dark-icon")
          .classList.toggle("hidden", !isDark);
        document
          .getElementById("theme-toggle-light-icon")
          .classList.toggle("hidden", isDark);
      }

      // Call on page load
      updateThemeIcons();

      // Override the existing toggleTheme to also update icons
      const originalToggleTheme = window.toggleTheme;
      window.toggleTheme = function () {
        originalToggleTheme();
        updateThemeIcons();
      };
    </script>
  </div>
</header>
