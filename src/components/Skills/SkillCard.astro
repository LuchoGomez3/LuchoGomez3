---
interface Props {
  title: string;
  skills: {
    title: string;
    image: string;
  }[];
}

const { title, skills } = Astro.props;
---

<div
  class="flex flex-col items-center hover:translate-y-[-10px] transition-all duration-200"
>
  <h3 class="text-xl font-semibold mb-2 mx-auto">{title}</h3>
  <div class="grid grid-cols-3 gap-6">
    {
      skills.map(({ title, image }) => (
        <div class="flex flex-col items-center">
          <img src={image} alt={title} class="w-12 h-12 mb-2" />
          <span class="text-sm">{title}</span>
        </div>
      ))
    }
  </div>
</div>

<style>
  h3 {
    background: linear-gradient(0deg, #7bbe89 14%, #151e4f 84%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
